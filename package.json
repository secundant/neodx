{
  "name": "neodx-root",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/secundant/neodx",
  "repository": {
    "type": "git",
    "url": "https://github.com/secundant/neodx"
  },
  "author": {
    "name": "Dmitry Remezov",
    "url": "https://github.com/secundant"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "tools/*",
    "tools/scripts/templates/*"
  ],
  "scripts": {
    "clean-node_modules": "yarn dlx rimraf '**/node_modules'",
    "check-install": "yarn dlx @yarnpkg/doctor .",
    "postinstall": "is-ci || yarn husky install",
    "release-version": "yarn changeset version && yarn nx format:write",
    "release-publish": "yarn nx affected:build && yarn changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.1",
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "@neodx/scripts": "workspace:*",
    "@types/node": "18.16.3",
    "eslint": "8.39.0",
    "eslint-kit": "6.12.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "13.2.2",
    "nx": "16.0.1",
    "prettier": "2.8.8",
    "typescript": "5.0.4",
    "vite": "4.3.3",
    "vite-plugin-dts": "2.3.0",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.30.1"
  },
  "dependenciesMeta": {
    "core-js": {
      "built": false
    },
    "core-js-pure": {
      "built": false
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=3.2.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@3.2.0"
}
