{
  "name": "@neodx/pkg-misc",
  "version": "0.0.8",
  "description": "Collection of utilities for common cases in package development - smart dependencies updates, simple formatting with auto-detection of prettier config, etc.",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "types": "./dist/types/index.d.ts",
  "module": "./dist/mjs/index.mjs",
  "source": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "autobuild",
    "test": "vitest run",
    "lint": "eslint src"
  },
  "dependencies": {
    "@neodx/fs": "0.0.10",
    "@neodx/std": "0.2.0",
    "@types/prettier": "3.0.0",
    "pathe": "1.1.2",
    "semver": "7.5.4"
  },
  "devDependencies": {
    "@neodx/autobuild": "*",
    "@types/semver": "7.5.7",
    "prettier": "3.2.5"
  },
  "peerDependencies": {
    "@types/semver": "*",
    "prettier": "*"
  },
  "peerDependenciesMeta": {
    "@types/semver": {
      "optional": true
    },
    "prettier": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/mjs/index.mjs",
      "require": "./dist/cjs/index.cjs"
    }
  }
}
