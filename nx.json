{
  "$schema": "node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "npmScope": "neodx",
  "workspaceLayout": {
    "libsDir": "libs",
    "appsDir": "apps"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    "nx.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["typecheck", "build", "lint", "test", "e2e"]
      }
    }
  },
  "namedInputs": {
    "shared": ["{workspaceRoot}/tsconfig.base.json", "{workspaceRoot}/package.json"],
    "src": [
      "{projectRoot}/src/**/*",
      "!{projectRoot}/src/*.test.ts",
      "!{projectRoot}/src/*.test.ts"
    ],
    "test": ["{projectRoot}/**/*.test.ts", "{projectRoot}/**/*.test.tsx"],
    "config": [
      "{projectRoot}/package.json",
      "{projectRoot}/tsconfig.json",
      "{projectRoot}/vite.config.ts"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "inputs": ["shared", "config", "src", "^src"]
    },
    "test": {
      "inputs": ["shared", "config", "test", "src", "^src"]
    },
    "dev": {
      "dependsOn": ["^build", "dev"]
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  }
}
